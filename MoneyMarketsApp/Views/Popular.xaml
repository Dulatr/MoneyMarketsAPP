<UserControl x:Class="MoneyMarketsApp.Views.Popular"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoneyMarketsApp.Views.TableViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Beige">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Headers -->
        <Button Grid.Column="0" Grid.Row="0" Content="Most Active" Background="Beige"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Top Gainers" Background="Beige"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Top Losers" Background="Beige"/>

        <local:PopularTables Grid.Row="1" Grid.ColumnSpan="3"/>
    </Grid>
</UserControl>
