<UserControl x:Class="MoneyMarketsApp.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyMarketsApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Beige">

    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Label DockPanel.Dock="Top" Content="In The News" HorizontalAlignment="Center"/>
        <StackPanel DockPanel.Dock="Bottom"></StackPanel>
        <!-- Content body -->
        <ScrollViewer Background="Azure">
            <ListBox x:Name="Home" ItemsSource="{Binding HomeStories}"/>
        </ScrollViewer>
    </DockPanel>
</UserControl>
